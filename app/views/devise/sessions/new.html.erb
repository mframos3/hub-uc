<h2>Iniciar Sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :contraseña %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
  </div>

  <div class="checkbox">
    <label>
    <%= f.check_box :remember_me, required: false, as: :boolean if devise_mapping.rememberable? %> Recuérdame
    </label>
  </div>

  <div class="form-group">
    <%= f.submit "Ingresar", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
