<h1><i class="glyphicon glyphicon-user"></i> Usuarios </h1>
<br>
<%= form_tag(users_path, method: :get) do %>
  <div class="form-group">
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag "Buscar", class: "btn btn-primary" %>
  </div>
<% end %>
<% @users.each do |user| %>
  <div >
    <h2><small class="author">
      <%= link_to user.name, user %>
      <div class="pull-right"><% if user.image? %>
        <%= image_tag(user.image.url, width: 40, height: 40, border: 0, class: 'img-circular') %>
    <% else %>
      <%= image_tag("default.png", width: 40, height: 40, border: 0, class: 'img-circular') %>
    <% end %>
      </small>
    </h2>
  </div>
  <hr>
<% end %>

<br><br>
<div class="btn-group">
  <%= link_to 'Volver', root_path, class: "btn btn-default" %>
</div>
